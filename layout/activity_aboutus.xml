            android:textSize="10dp"
            android:textStyle="italic" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout3"
        android:text="Mitchelle Hedwig"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
     />

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/layout2"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/photocover"
            android:backgroundTint="@color/white"
            android:padding="15dp"
            android:src="@mipmap/hadwan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="10dp"
            android:background="@drawable/rectangleshape"
            android:layout_marginStart="4dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"

            android:padding="10dp"
            android:text="~Role :Founder/Developer justiceNetapp \n~Background: Biochemistry student @ university of Eldoret\n~Experince:Focused on water  and sunitation project sustainable and development Goal NO.6\n~Mission:Commited to making the world a better place to live in through enhancing the environment using innovative solutions "/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/layout3"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/photocover"
            android:backgroundTint="@color/material_dynamic_neutral100"
            android:padding="5dp"
            android:src="@mipmap/geffg_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/rectangleshape"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:text="~Role :Founder/Developer justiceNetapp \n~Background: Actuarial Science student @ university of Eldoret\n~Experince:Focused on water  and sunitation project sustainable and development Goal NO.6\n~Mission:Commited to making the world a better place to live in through enhancing the environment using innovative solutions "
            android:textSize="10dp"
            android:padding="10dp"/>


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout4"
        android:text="Geff gitonga"
        android:layout_marginStart="15dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/layout5"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/layout4"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/photocover"
            android:backgroundTint="@color/material_dynamic_neutral100"
            android:src="@mipmap/vivian_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="~Role :Founder/Developer justiceNetapp \n~Background: Biochemistry student @ university of Eldoret\n~Experince:Focused on water  and sunitation project sustainable and development Goal NO.6\n~Mission:Commited to making the world a better place to live in through enhancing the environment using innovative solutions "
            android:textSize="10dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:padding="10dp"
            android:background="@drawable/rectangleshape"/>


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout5"
        android:text="Juma Vivian "
        android:layout_marginStart="15dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

</RelativeLayout>

